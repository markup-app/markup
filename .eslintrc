
env:
  es6: true
  browser: true
  node: true

globals:
  React: true

rules:
  block-spacing: [2, always]
  comma-spacing: [2, {before: false, after: true}]
  comma-style: [2, last]
  no-unreachable: 2
  no-var: 0
  space-before-function-paren: 0
  object-curly-spacing: 0
  array-bracket-spacing: 0
  no-multiple-empty-lines: [2, {"max": 1}]

parserOptions:
  sourceType: module
  ecmaVersion: 6
  ecmaFeatures:
    jsx: true
    experimentalObjectRestSpread: true

strict: 1
